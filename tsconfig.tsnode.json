{
  "$schema": "https://json.schemastore.org/tsconfig",
  // This is an alias to @tsconfig/node16: https://github.com/tsconfig/bases
  "extends": "./tsconfig.node.json",
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ],
    // It is faster to skip typechecking.
    // Remove if you want ts-node to do typechecking.
    "transpileOnly": true,
    "files": true,
    "moduleTypes": {
      // "package" obeys package.json "type" and tsconfig.json "module" options.
      // "cjs" overrides matches files to compile and execute as CommonJS.
      // "esm" overrides matches files to compile and execute as native ECMAScript modules
      // Globs are also supported with the same behavior as tsconfig "include"
      "./index.ts": "esm",
      "./src/**/*": "esm",
      // ESBuild
      "esbuild.config.ts": "esm",
      "esbuild-config-scripts/**/*": "esm"
    },
    "compilerOptions": {
      // compilerOptions specified here will override those declared below,
      // but *only* in ts-node.  Useful if you want ts-node and tsc to use
      // different options with a single tsconfig.json.
      "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.tsnode.tsbuildinfo",
      "composite": true,
    }
  },
  "compilerOptions": {
    "composite": true,
  }
}
